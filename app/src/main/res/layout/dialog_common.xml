<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dp"
            android:padding="@dimen/def_magin"
            android:textColor="@color/text333"
            android:textSize="@dimen/def_textsize"/>

        <View style="@style/StyleLine.Light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text666"
                android:textSize="@dimen/def_textsize"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_light"/>

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/def_textsize"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>