<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title"
        style="@style/StyleTitle"
        app:centerText="@string/app_name"
        app:leftImageResource="@drawable/home_btn_leftbar"
        app:rightImageResource="@drawable/sel_home_btn_more"
        app:rightType="imageButton"
        app:showBottomLine="false"
        app:statusBarColor="@android:color/transparent"
        app:titleBarColor="@android:color/transparent"/>

    <FrameLayout
        android:id="@+id/frg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>