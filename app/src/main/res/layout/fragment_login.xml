<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/def_magin_big"
        android:paddingRight="@dimen/def_magin_big">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginTop="@dimen/def_magin">

            <TextView
                android:id="@+id/tv_icode"
                android:layout_width="@dimen/icode_width"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/login_icon_arrow_phone"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/text333"
                android:textSize="@dimen/def_textsize"/>

            <EditText
                android:id="@+id/edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/def_magin"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="@integer/max_mobile"
                android:singleLine="true"
                android:textColor="@color/text333"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/def_textsize"/>

        </LinearLayout>

        <View style="@style/StyleLine"/>

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="@integer/max_pwd"
            android:singleLine="true"
            android:textColor="@color/text333"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/def_textsize"/>

        <View style="@style/StyleLine"/>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:paddingLeft="@dimen/def_magin"
            android:paddingTop="@dimen/def_magin"
            android:paddingBottom="@dimen/def_magin"
            android:textColor="@color/blue"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_login"
            style="@style/StyleBtn"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

</ScrollView>